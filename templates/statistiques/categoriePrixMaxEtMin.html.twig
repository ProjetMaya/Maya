{% extends 'base.html.twig' %}

{% block title %}Statistiques catégorie{% endblock %}

{% block body %}
	<div class="col-md-6 contenu-blanc">
        <h1>Les <span> {{  lesCategories | length }}  </span>catégories</h1>
		<!-- le filtre "length" affiche la longueur d'un tableau, d'une chaîne de caractères -->
		
        <div class="contenu">
            <table class="table table-striped table-advance table-hover">
                <thead>
					<tr class="bg-entete">
						<th>Libellé</th>
						<th>Nombre de produits</th>
						<th>Prix minimum</th>
						<th>Prix maximum</th>
					</tr>
                </thead>
                <tbody>
					{% for key, categorie in lesCategories %}
						<tr>
							<td>{{ categorie.libelle }}</td>
							<td>{{ categorie.nbProduits }}</td>
							<td>{{ categorie.minPrix | number_format(2, ',', ' ') }} €</td>
							<td>{{ categorie.maxPrix | number_format(2, ',', ' ') }} €</td>
						</tr>
					{% endfor %}
                </tbody>
            </table>
        </div> <!--fin div contenu-->
    </div> <!--fin div col-md-6-->
{% endblock %}
