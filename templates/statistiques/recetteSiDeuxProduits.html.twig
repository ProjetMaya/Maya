{% extends 'base.html.twig' %}

{% block title %}Statistiques recette{% endblock %}

{% block body %}
	<div class="col-md-6 contenu-blanc">
        <h1>Les <span> {{  lesRecettes | length }}  </span>recettes</h1>
		<!-- le filtre "length" affiche la longueur d'un tableau, d'une chaîne de caractères -->
		
        <div class="contenu">
            <table class="table table-striped table-advance table-hover">
                <thead>
					<tr class="bg-entete">
						<th>Libellé</th>
						<th>Nombre de produits</th>
					</tr>
                </thead>
                <tbody>
					{% for key, recette in lesRecettes %}
						<tr>
							<td>{{ recette.nom }}</td>
							<td>{{ recette.nbProduits }}</td>
						</tr>
					{% endfor %}
                </tbody>
            </table>
        </div> <!--fin div contenu-->
    </div> <!--fin div col-md-6-->
{% endblock %}
