{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    {#<h1>User index</h1> #}
	<div class="col-md-12 contenu-blanc">
        <h1>Les <span> {{  users | length }}  </span>utilisateurs</h1>
		<!-- le filtre "length" affiche la longueur d'un tableau, d'une chaîne de caractères -->
		
		<div class="container-fluid contenu">
			<table class="table table-striped table-advance table-hover">
				<thead>
					<tr class="bg-entete">
						<th class="col-identifiants">Identifiants</th>
						<th>Email</th>
						<th>Rôles</th>
						<th>Mot de passe</th>
						<th>Nom</th>
						<th>Prénom</th>
						<th>Téléphone</th>
						<th class="col-actions" style="width: 210px;">Actions<span class="pull-right" ><a href="{{ path('user_new') }}" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Ajouter</a></span></th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.id }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
							<td class="col-password">{{ user.password }}</td>
							<td>{{ user.nom }}</td>
							<td>{{ user.prenom }}</td>
							<td>{{ user.telephone }}</td>
							<td>
								<a class="btn btn-info btn-sm"  href="{{ path('user_show', {'id': user.id}) }}"  title="Visualiser"><i class="fa fa-eye"></i> Visualiser</a>
								<a class="btn btn-primary btn-sm" href="{{ path('user_edit', {'id': user.id}) }}" title="Modifier"><i class="fa fa-pencil"></i> Modifier</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="8">Aucun d'utilisateur trouvé</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>	
	</div>		
{% endblock %}
