{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    {#<h1>User index</h1> #}
	<div class="col-md-12 contenu-blanc">
        <h1>Les <span> {{  users | length }}  </span>utilisateurs</h1>
		<!-- le filtre "length" affiche la longueur d'un tableau, d'une chaîne de caractères -->
		
		<div class="container-fluid contenu">
			<table class="table table-striped table-advance table-hover">
				<thead>
					<tr class="bg-entete">
						<th class="col-identifiants">Identifiants</th>
						<th>Email</th>
						<th>Rôles</th>
						<th class="col-md-2">Mot de passe</th>
						<th>Nom</th>
						<th>Prénom</th>
						<th>Téléphone</th>
						<th class="col-actions">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.id }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
							<td>{{ user.password }}</td>
							<td>{{ user.nom }}</td>
							<td>{{ user.prenom }}</td>
							<td>{{ user.telephone }}</td>
							<td>
								<a href="{{ path('user_show', {'id': user.id}) }}">Détailler</a>
								<a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="8">Aucun d'utilisateur trouvé</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a href="{{ path('user_new') }}">Ajouter un nouvel utilisateur</a>
		</div>	
	</div>		
{% endblock %}
