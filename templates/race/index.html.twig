{% extends 'base.html.twig' %}

{% block title %}Races{% endblock %}

{% block body %}
    <div class="col-md contenu-blanc">
        <h1>Les <span> {{ lesRaces | length }}  </span>races</h1>
        <!-- le filtre "length" affiche la longueur d'un tableau, d'une chaîne de caractères -->

        {{ include('messages.html.twig') }}

        <div class="contenu">
            <table class="table table-striped table-advance table-hover">
                <thead>
                <tr class="bg-entete">
                    <th class="col-identifiants">Identifiant</th>
                    <th>Race</th>
                    <th class="col-actions-lg">Actions</th>
                </tr>
                </thead>
                <tbody>
                <!-- formulaire pour ajouter une nouvelle race-->
                <tr>
                    {{ form_start(formCreation, {'attr': {'novalidate': 'novalidate'}}) }}
                    <td>Nouveau</td>
                    <td>{{ form_widget(formCreation.intitule) }}  {{ form_errors(formCreation.intitule) }}</td>

                    <td>
                        <button class="btn btn-primary btn-sm" type="submit" formaction="{{ path('race_ajouter') }}"
                                title="Enregistrer nouvelle race"><i class="fa fa-save"></i> Enregistrer
                        </button>
                        <button class="btn btn-info btn-sm" type="reset" title="Effacer la saisie"><i
                                    class="fa fa-eraser"></i> Annuler
                        </button>
                    </td>
                    {{ form_rest(formCreation) }}
                    {{ form_end(formCreation) }}
                </tr>


                {% for key, race in lesRaces %}
                    <tr>
                        {% if race.id != idRaceModif %}
                            <td>{{ race.id }}</td>
                            <td>{{ race.intitule }}</td>
                            <!-- formulaire pour demander la modification ou la suppression -->
                            <td>
                                <form>
                                    <button type="submit" class="btn btn-primary btn-sm"
                                            formaction="{{ path('race_demandermodification', {'id' : race.id }) }}"
                                            title="Modifier"><i class="fa fa-pencil"></i> Modifier
                                    </button>
                                    <button class="btn btn-danger btn-sm" type="submit"
                                            formaction="{{ path('race_supprimer', {'id' : race.id }) }}"
                                            title="Supprimer"
                                            onclick="return confirm('Voulez-vous vraiment supprimer cette race ?');">
                                        <i class="fa fa-trash-o "></i> Supprimer
                                    </button>
                                    <input type="hidden" name="_token"
                                           value="{{ csrf_token('action-item' ~ race.id) }}">
                                </form>
                            </td>
                        {% else %}
                            <!-- formulaire pour modifier un race -->
                            {{ form_start(formModification) }}
                            <td>{{ race.id }}</td>
                            <td>{{ form_widget(formModification.intitule) }} {{ form_errors(formModification.intitule) }}</td>

                            <td class="col-md-4">
                                <button class="btn btn-primary btn-sm" type="submit"
                                        formaction="{{ path('race_modifier', {'id' : race.id }) }}" title="Enregistrer">
                                    <i class="fa fa-save"></i> Enregistrer
                                </button>
                                <button class="btn btn-info btn-sm" type="reset" title="Effacer la saisie"><i
                                            class="fa fa-eraser"></i> Effacer
                                </button>
                                <button class="btn btn-warning btn-sm" type="submit" formaction="{{ path('race') }}"
                                        title="Annuler"><i class="fa fa-undo"></i> Annuler
                                </button>
                            </td>
                            {{ form_rest(formModification) }}
                            {{ form_end(formModification) }}
                        {% endif %}

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
